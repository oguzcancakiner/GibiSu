@model IEnumerable<GibiSu.Models.OrderProduct>

@{
    ViewData["Title"] = "Index";
}
<script>
    function CountUp(pid) {
        $.get("@Url.Action("CountPlus","OrderProducts")?productid=" + pid, function (pcount) {
            $("#PCount-" + pid).val(pcount);
        });
    }
    function CountDown(pid) {
        $.get("@Url.Action("CountMinus","OrderProducts")?productid=" + pid, function (pcount) {
            $("#PCount-" + pid).val(pcount);
        });
    }
</script>

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="container my-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3">
        @foreach (var item in Model)
        {
            <div class="col mb-sm-2">

                <div class="card mb-4 shadow">
                    <img src='data:image/jpeg;base64,@Convert.ToBase64String(item.Product.Image)' class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@item.Product.Name</h5>
                        <div class="text-align:center">
                            <p style="font-weight:700; text-align:center">@item.Product.Price TL</p>
                        </div>
                        <div style="text-align:center">
                            <button onclick="CountUp(@item.ProductId)" class="btn btn-primary button-cart" title="Arttır" type="button">
                            </button>
                            <input disabled id="PCount-@item.ProductId.ToString()" type="text" value="@item.Amount"/>
                            <button onclick="CountDown(@item.ProductId)" class="btn btn-primary button-cart" title="Arttır" type="button">
                            </button>
                            <button class="btn btn-primary button-cart" type="button">
                                <i class="fa fa-shopping-cart me-1">Sepeti Onayla</i>
                            </button>
                        </div>

                    </div>
                </div>

            </div>
        }
    </div>
</div>