@model GibiSu.Models.Page

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Page</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Url" />
            <div class="form-group">
                <label asp-for="Title" class="control-label"></label>
