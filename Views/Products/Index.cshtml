@model IEnumerable<GibiSu.Models.Product>

@{
    ViewData["Title"] = "Index";

    string content;
}
<script>
    function SepeteEkle(id) {
        $.get("@Url.Action("AddCart","OrderProducts")?productId=" + id);
    }
    function CountUp(pid) {
        $.get("@Url.Action("CountPlus","OrderProducts")?productid=" + pid, function (pcount) {
            $("#PCount-" + pid).val(pcount);
        });
    }
    function CountDown(pid) {
        $.get("@Url.Action("CountMinus","OrderProducts")?productid=" + pid, function (pcount) {
            $("#PCount-" + pid).val(pcount);
        });
    }
</script>
<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="container my-4">
    <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 card-row">
        @foreach (var item in Model)
        {
            if (item.Description.Length<200)
            {
                 content = item.Description;
            }
            else
            {
                 content = item.Description.Substring(0, 200)+ "...";
            }
       
            <div class="col">
                <div class="product-card card shadow">
                    <img src='data:image/jpeg;base64,@Convert.ToBase64String(item.Image)' class="card-img-top" />
                    <div class="card-body mt-2">
                        <div style="text-align: center" class="product-card-title">
                            @item.Name
                        </div>
                        <div class="product-card-price">@item.Price TL</div>

                        <p style="margin-top: 10px; text-align: center">
                            @content
                        </p>
                        <div style="text-align: center; margin-bottom: 10px">
                            <button class="cart-count-btn btn btn-primary" onclick="CountDown(@item.Id)">
                                <i class="fa-solid fa-minus"></i>
                            </button>
                            <span>
                                <input disabled
                                   type="number"
                                   style="width: 50px; border-radius: 10px" value="" />
                            </span>
                            <button class="cart-count-btn btn btn-primary" onclick="CountUp(@item.Id)">
                                <i class="fa-solid fa-plus"></i>
                            </button>
                        </div>
                        <div style="text-align: center">
                            <span>
                                <button class="button-card-cart btn btn-primary" onclick="SepeteEkle(@item.Id)">
                                    <i class="fa-solid fa-cart-shopping"></i>
                                    Sepete Ekle
                                </button>
                            </span>
                        </div>
                    </div>
                </div>
            </div>

        }
    </div>
</div>


