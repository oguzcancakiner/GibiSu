
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GibiSu.styles.css" asp-append-version="true" />
    <link rel="icon" sizes="16x16" href="https://i.ibb.co/JtdRzwR/Whats-App-Image-2023-01-10-at-12-54-28-removebg-preview.png" />
    <link href="~/font-awesome/css/all.css" rel="stylesheet" />
    <link href="~/font-awesome/css/all.min.css" rel="stylesheet" />
    <title>@ViewData["Title"]</title>
</head>
<body>
<div class="container-fluid">
    <div class="row">
        <div class="col-2 border-end" style="display: grid; align-items: center; justify-items: start;">
            <h2><a  asp-controller="Admin" asp-action="Index" >Admin Paneli</a></h2>
            <hr />
            <ul style="list-style-type: disclosure-closed;">
                <li>
                    <label>Menüler</label>
                    <a asp-controller="Menus" asp-action="Create">
                        <i class="fa fa-plus-circle" aria-hidden="true"></i>
                     </a>
                     <a asp-controller="Menus" asp-action="Index">
                         <i class="fa fa-list" aria-hidden="true"></i>
                     </a>                     
                </li>
                <li>
                    <label>Sayfalar</label>
                    <a asp-controller="Pages" asp-action="Create">
                        <i class="fa fa-plus-circle" aria-hidden="true"></i>
                     </a>
                     <a asp-controller="Pages" asp-action="Index">
                         <i class="fa fa-list" aria-hidden="true"></i>
                     </a>
                </li>
                <li>
                    <label>İçerikler</label>
                    <a asp-controller="Contents" asp-action="Create">
                        <i class="fa fa-plus-circle" aria-hidden="true"></i>
                     </a>
                     <a asp-controller="Contents" asp-action="Index">
                         <i class="fa fa-list" aria-hidden="true"></i>
                     </a>
                </li>
                <li>
                    <label>Ürünler</label>
                    <a asp-controller="Products" asp-action="Create">
                        <i class="fa fa-plus-circle" aria-hidden="true"></i>
                     </a>
                     <a asp-controller="Products" asp-action="Index">
                         <i class="fa fa-list" aria-hidden="true"></i>
                     </a>
                </li>
            </ul>
        </div>
        <div class="col-10">
             @RenderBody()
        </div>

    </div>
</div>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>