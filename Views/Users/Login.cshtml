@model GibiSu.Models.ApplicationUser

@{
    ViewData["Title"] = "Login";
}


<h4 style="padding-left: 50px;">Giriş Yap</h4>
<hr />
<div class="row">
    <div>
        <form id="registerForm" asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserName" class="control-label"></label>
                <input name="UserName" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label"></label>
                <input name="Password" type="password" class="form-control" />
            </div>
            <div class="form-group logsub">
                <input type="submit" value="Giriş Yap" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

