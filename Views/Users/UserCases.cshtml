@using Microsoft.EntityFrameworkCore
@using GibiSu.Data;
@model IEnumerable<GibiSu.Models.ApplicationUser>
@{
    ViewData["Title"] = "UserCases";
    
}

@foreach (var item in Model)
        {

            <tr>
                @if(item.Deleted != true){
                    
                <td>
                    @Html.DisplayFor(modelItem => item.NormalizedUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                <a asp-controller="Users" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-sm" style="width: 70px;">Sil</a>
                </td>
                }
            
            @foreach (var item1 in Model)
        {
                @if(item1.Deleted == true){
                    
                <td>
                    @Html.DisplayFor(modelItem => item1.NormalizedUserName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item1.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item1.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item1.PhoneNumber)
                </td>
                <td>
                <a class="btn btn-danger btn-sm" style="width: 70px;">Silindi.</a>
                </td>
                
                }
        }
            </tr>
            }

